# Build stage
FROM golang:1.21-alpine AS builder

# Install build dependencies
RUN apk add --no-cache git

# Set working directory
WORKDIR /app

# Copy go mod files
COPY go.mod go.sum ./

# Download dependencies
RUN go mod download

# Copy source code
COPY . .

# Build the client binary
RUN CGO_ENABLED=0 GOOS=linux go build -a -installsuffix cgo -o tunnel-client ./client

# Final stage
FROM alpine:latest

# Install ca-certificates for TLS
RUN apk --no-cache add ca-certificates

# Create non-root user
RUN addgroup -g 1000 tunnel && \
    adduser -D -u 1000 -G tunnel tunnel

# Copy binary from builder
COPY --from=builder /app/tunnel-client /usr/local/bin/tunnel-client

# Switch to non-root user
USER tunnel

# Set entrypoint
ENTRYPOINT ["/usr/local/bin/tunnel-client"]

# Default arguments (can be overridden)
CMD ["-server=wss://tunnel-server:8443/tunnel"]